<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:int-amqp="http://www.springframework.org/schema/integration/amqp"
       xmlns:int="http://www.springframework.org/schema/integration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/integration
  http://www.springframework.org/schema/integration/spring-integration.xsd
  http://www.springframework.org/schema/integration/amqp
  http://www.springframework.org/schema/integration/amqp/spring-integration-amqp.xsd
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd">

  <int:channel id="st1-oc-channel"/>
  <int:channel id="st1-sdc-channel" />

  <int-amqp:inbound-channel-adapter id="st1-adapter" queue-names="${que.oc.soccer.st1}"
                                    connection-factory="ocConsumerConnectionFactory" acknowledge-mode="AUTO" channel="st1-oc-channel"
                                    error-channel="invalidMessageChannel"
                                    mapped-request-headers="*"
                                    message-converter="messageStamper" />

  <int:bridge id="st1-bridge" input-channel="st1-oc-channel" output-channel="st1-sdc-channel" />

  <int-amqp:outbound-channel-adapter amqp-template="sdcnqRabbitTemplate"
                                     exchange-name="${exc.sdc.oc}" routing-key="st1"
                                     channel="st1-sdc-channel" mapped-request-headers="*" />

</beans>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>ptv.feed.sdc</groupId>
  <artifactId>feed-sender</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Feed Sender distribution module</name>

  <scm>
    <connection>scm:git:ssh://git@github.com:AdiPerform/sdapi-feed-sender.git</connection>
    <developerConnection>scm:git:ssh://git@github.com:AdiPerform/sdapi-feed-sender.git</developerConnection>
    <url>https://github.com/AdiPerform/sdapi-feed-sender.git</url>
  </scm>

  <ciManagement>
    <url>https://jenkins2.performgroup.com/job/sdapi.feed.sender/</url>
  </ciManagement>

  <issueManagement>
    <url>https://jira2.performgroup.com</url>
  </issueManagement>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>1.8</java.version>

    <nq.api.version>4.27.2</nq.api.version>
    <sa.version>5.0.3</sa.version>
    <sdc.shared.version>5.2.28</sdc.shared.version>
    <sdc.shared.test.version>5.0.4</sdc.shared.test.version>

    <groovy.all.version>2.4.3</groovy.all.version>
    <spock.version>1.0-groovy-2.4</spock.version>
    <lmax.disruptor.version>3.3.0</lmax.disruptor.version>
    <slf4j.version>1.7.25</slf4j.version>
    <log4j.version>2.8.2</log4j.version>
    <junit.version>4.11</junit.version>
    <unitils.version>3.3</unitils.version>
    <spring.version>4.1.3.RELEASE</spring.version>
    <gmaven.version>1.5</gmaven.version>
    <spring.integration.version>4.0.2.RELEASE</spring.integration.version>
    <spring.amqp.version>1.3.4.RELEASE</spring.amqp.version>

    <jackson.version>2.6.0</jackson.version>
    <jackson.jaxb.annotations.version>2.6.0</jackson.jaxb.annotations.version>
    <version.commons.lang>2.6</version.commons.lang>
    <apache.httpclient.version>4.5.2</apache.httpclient.version>
    <xmlunit.version>1.5</xmlunit.version>
    <wiremock.version>1.57</wiremock.version>
    <mock-aerospike-java>0.0.4</mock-aerospike-java>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>${project.basedir}/src/main/resources</directory>
      </resource>
      <resource>
        <directory>../../../pf-configurations</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>${project.basedir}/src/main/resources</directory>
      </testResource>
      <testResource>
        <directory>${project.basedir}/src/test/resources</directory>
      </testResource>
      <testResource>
        <directory>../../../pf-configurations</directory>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.18.1</version>
        <executions>
          <execution>
            <id>default-test</id>
            <configuration>
              <forkCount>4</forkCount>
              <reuseForks>true</reuseForks>
              <includes>
                <include>**/*Test.class</include>
              </includes>
            </configuration>
          </execution>
          <execution>
            <id>it-test</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <forkCount>1</forkCount>
              <reuseForks>false</reuseForks>
              <testFailureIgnore>false</testFailureIgnore>
              <argLine>-Xmx1g</argLine>
              <includes>
                <include>**/*IT.class</include>
              </includes>
              <excludes>
                <exclude>**/*SystemIT.java</exclude>
              </excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <version>${gmaven.version}</version>
        <configuration>
          <providerSelection>2.0</providerSelection>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.gmaven.runtime</groupId>
            <artifactId>gmaven-runtime-2.0</artifactId>
            <version>${gmaven.version}</version>
            <exclusions>
              <exclusion>
                <groupId>org.codehaus.groovy</groupId>
                <artifactId>groovy-all</artifactId>
              </exclusion>
            </exclusions>
          </dependency>
          <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>${groovy.all.version}</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>

    <!-- PF -->
    <dependency>
      <groupId>ptv.feed</groupId>
      <artifactId>nq-api-1.3</artifactId>
      <version>${nq.api.version}</version>
